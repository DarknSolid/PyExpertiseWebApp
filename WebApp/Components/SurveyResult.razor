@using WebApp.Models;

<MudText Typo="Typo.h3" GutterBottom="true">Import Analysis Results</MudText>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6" GutterBottom="true">Below is a table showing the total amount of imports that you have committed:</MudText>

        <div class="d-flex flex-column gap-10">

            <MudTable Items="@ImportResults" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
                <HeaderContent>
                    <MudTh>Library</MudTh>
                    <MudTh>Total Imports</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Library">@context.Library</MudTd>
                    <MudTd DataLabel="Total Imports">@context.Count</MudTd>
                </RowTemplate>
            </MudTable>
        </div>

    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="OnSubmit">Finish</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<Import> ImportResults { get; set; }

    [Parameter, EditorRequired]
    public Action OnSubmit { get; set; }

}
